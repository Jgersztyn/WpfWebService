<Window x:Class="WpfWebService.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfWebService"
        mc:Ignorable="d"
        Title="Tracking Info" Height="300" Width="250">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="54*"/>
            <ColumnDefinition Width="11*"/>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="49*"/>
        </Grid.ColumnDefinitions>
        <Button Content="Display Data" HorizontalAlignment="Left" Height="30" Margin="10,10,0,0" VerticalAlignment="Top" Width="100" Cursor="None" Grid.ColumnSpan="2" Click="Button_Click" FontSize="16"/>
        <DataGrid Name="TrackingDataGridView" HorizontalAlignment="Left" Height="200" Margin="10,51,0,0" VerticalAlignment="Top" Width="150" Grid.ColumnSpan="4">
            <DataGrid.Columns>
                <DataGridTextColumn Header = "Tracking Number"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
